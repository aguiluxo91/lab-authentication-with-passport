<div class="row">
  <div class="col-12 col-sm-4 mx-auto">
    {{#if verification}}
      <div class="alert alert-warning" role="alert">
        Please verify your email account.
      </div>
    {{/if}}
    {{#if errors.oauth}}
    <div class="alert alert-danger" role="alert">
      {{ errors.oauth }}
    </div>
    {{/if}}

    <form action="/login" method="post" class="mt-3 mb-3">
      <div class="input-group mb-1">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></span>
        </div>
        <input type="text" class="form-control {{isInvalid errors.username}}" name="username"
          placeholder="Username" value="{{ user.username }}">
        {{formError errors.username}}
      </div>

      <div class="input-group mb-1">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fa fa-lock" aria-hidden="true"></i></span>
        </div>
        <input type="password" class="form-control {{isInvalid errors.password}}" name="password"
          placeholder="Password">
        {{formError errors.password}}
      </div>

      <button type="submit" class="btn btn-primary btn-block mt-1">Login</button>
    </form>
    <hr>
    <a class="btn btn-secondary btn-block" href="/authenticate/google"><i class="fa fa-google"></i> Login with Google</a>
    <a class="btn btn-primary btn-block" href="/signup">Register</a>
  </div>
</div>